<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#BCE9ED">
    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:src="@drawable/userimg">
        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textSize="25sp"
                android:textColor="@color/white">
            </TextView>
            <TextView
                android:id="@+id/displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
            <ImageButton
                android:id="@+id/sosbtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:src="@drawable/sosb"
                android:scaleType="centerInside"
                android:background="@color/black">
            </ImageButton>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        app:cardCornerRadius="30dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/bookRide"
                android:backgroundTint="@color/white"
                android:layout_width="350dp"
                android:layout_height="140dp"
                android:src="@drawable/newready"
                android:scaleType="fitXY">
            </ImageButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        app:cardCornerRadius="30dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/rentRide"
                android:backgroundTint="@color/white"
                android:layout_width="350dp"
                android:layout_height="140dp"
                android:src="@drawable/img_4"
                android:scaleType="fitXY">
            </ImageButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        app:cardCornerRadius="30dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_gravity="center"
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#B32020"
        android:text="Logout"
        android:textSize="22sp"
        android:textStyle="bold">
    </Button>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:src="@drawable/dra"
        android:scaleType="fitXY">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingBottom="2dp"
        android:text="Made by Yathartha with â™¥"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center">
    </TextView>
</LinearLayout>